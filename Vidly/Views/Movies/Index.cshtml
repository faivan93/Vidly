@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<!--<a href="~/Models/Movie/Create.cs" class="btn btn-primary">NEW MOVIE</a>-->
@Html.ActionLink("NEW MOVIE", "Create", null, new { @class="btn btn-primary"})
<br />
<br />
    <table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Genre
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(Convert.ToString(Html.DisplayFor(modelItem => item.Name)), "Edit", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
        </tr>
    }

</table>
